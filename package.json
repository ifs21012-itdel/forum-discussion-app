{
  "name": "forum-discussion-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "start:ci-e2e": "CI=false react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test start:ci-e2e http-get://localhost:3000/manifest.json cypress:run",
    "ci:test": "npm test && npm run e2e"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^1.9.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.30.0",
    "react-scripts": "^5.0.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "styled-components": "^6.1.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "cypress": "^13.13.1",
    "eslint": "^8.57.0",
    "eslint-config-dicodingacademy": "^0.9.4",
    "eslint-plugin-cypress": "^3.4.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "redux-mock-store": "^1.5.4",
    "start-server-and-test": "^2.0.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "dicodingacademy",
      "plugin:testing-library/react",
      "plugin:jest-dom/recommended"
    ],
    "plugins": [
      "testing-library",
      "jest-dom"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!axios)/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/setupTests.js",
      "!src/redux/store.js",
      "!src/redux/types.js",
      "!src/redux/selectors/*",
      "!src/services/api.js",
      "!src/utils/api.js"
    ]
  }
}